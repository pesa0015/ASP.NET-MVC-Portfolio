<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Peter Sall - Webbutvecklare</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery.cssemoticons.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="../Content/Images/favicon-white.png" rel="shortcut icon" />
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Portfolio", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Översikt", "Index", "Sites")</li>
                        <li>@Html.ActionLink("Lägg till", "Create", "Sites")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    }
    <div id="content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.cssemoticons.min.js")
    <script>
        $(document).ready(function () {
            $('.comment').emoticonize({
                delay: 0,
                animate: true
            });
        })
    </script>
    @Scripts.Render("~/Scripts/site_hover.js")
    @RenderSection("scripts", required: false)
</body>
</html>
